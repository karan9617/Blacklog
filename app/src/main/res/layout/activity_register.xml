<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#000"
    >

    <ImageView
        android:layout_width="260dp"
        android:layout_height="150dp"

        android:id="@+id/image"
        android:src="@drawable/logoblacklog"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearfordots"
        android:orientation="vertical"
        android:layout_alignTop="@+id/image"
        >

        <ImageView
            android:id="@+id/highway"
            android:layout_width="match_parent"
            android:layout_marginTop="90dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/highway" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_user_icon"
            android:fontFamily="@font/allerta"
            android:hint="Username"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />

        <EditText
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:fontFamily="@font/allerta"
            android:hint="Phone Number"
            android:inputType="number"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:fontFamily="@font/allerta"
            android:hint="Email"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />

        <EditText
            android:id="@+id/agencyName"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_agency"
            android:fontFamily="@font/allerta"
            android:hint="Agency Name"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />


        <EditText
            android:id="@+id/officeAddresses"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="49dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_baseline_add_location_24"
            android:background="@drawable/edittext"
            android:hint="Office Address"

            android:fontFamily="@font/allerta"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="#E3D9D9" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:fontFamily="@font/allerta"
            android:hint="Password"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />


        <EditText
            android:id="@+id/passwordAgain"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:fontFamily="@font/allerta"
            android:hint="Confirm Password"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#E3D9D9" />



        <Button
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/signUpButton"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textSize="22sp"
            android:background="@drawable/mybutton"
            />
    </LinearLayout>
</RelativeLayout>